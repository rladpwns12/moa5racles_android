<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/nickTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="최민성짱"
        android:textSize="15dp"
        android:textColor="#000000"/>
    <TextView
    android:id="@+id/dateTxtV"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_below="@id/nickTxtV"
    android:layout_marginLeft="20dp"
    android:text="신청날짜 2019-08-22 19:20:22"
    android:textSize="10dp"/>
    <TextView
        android:id="@+id/addressTxtV"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/dateTxtV"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="주소 서울특별시 동작구 상도동 상도로17-21길 501호"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/priceTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="150000원"
        android:textSize="13dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/typeTxtV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/priceTxtV"
        android:layout_marginRight="30dp"
        android:text="승인대기중"
        android:textSize="10dp"/>

</RelativeLayout>